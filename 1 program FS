#include<fstream.h>

#include<iostream.h>

#include<string.h>

#include<conio.h>

#include<stdlib.h>

int main()

{

 char name[10][20];

 char temp[20];

 char ifilename[15],ofilename[15];

 int num,i;

 clrscr();

cout<<"Enter how many names you want to enter"<<endl;

cin>>num;

cout<<"Enter the names \n";

for(i=0;i<num;i++)

cin>>name[i];

cout<<"Names in the reverse order \n";

for(i=0;i<num;i++)

cout<<strrev(name[i])<<endl;

cout<<"Enter the input file name which contains list of names \n";

cin>>ifilename;

cout<<"Enter the output file name where reversed list of names has to be written \n";

cin>>ofilename;

fstream infile,outfile;

infile.open(ifilename,ios::in);

outfile.open(ofilename,ios::out);

if(!infile)

{

cout<<"could not open the specified file ";

getch();

exit(0);

}

while(!infile.eof())

{
infile.getline(temp,20,'\n');

outfile<<strrev(temp)<<endl;

}

outfile.close();

infile.close();

cout<<"Output written to file "<<ofilename;

 getch();

 return 0;

}

